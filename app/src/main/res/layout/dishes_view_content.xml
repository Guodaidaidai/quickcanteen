<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:text="dish_name" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishName" android:layout_weight="1.5"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="wrap_content"/>
    <TextView
            android:text="dish_quantity" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishQuantity" android:layout_weight="1"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="wrap_content"/>
    <TextView
            android:text="dish_price" android:textColor="@color/color_text_black"
            android:layout_height="35dp" android:id="@+id/dishPrice" android:layout_weight="1"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="wrap_content"/>

</LinearLayout>